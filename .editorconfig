root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.cs]
indent_style = space
indent_size = 4
csharp_new_line_before_open_brace = all
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

[*.{json,yml,yaml,md,ts,tsx,js,jsx,css,scss}]
indent_style = space
indent_size = 2
